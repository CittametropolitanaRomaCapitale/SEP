<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.7.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1392842798347-1" author="arlias">
        <dropForeignKeyConstraint baseTableName="attachment" constraintName="attachment_delegation_fk"/>

        <createTable tableName="delegation">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_delegation"/>
            </column>
            <column name="note" type="CLOB"/>
            <column name="user_id" type="BIGINT"/>
            <column name="from_user_id" type="BIGINT"/>
            <column name="delegation_start" type="TIMESTAMP"/>
            <column name="delegation_end" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
    
    <changeSet id="1392842798347-2" author="arlias">
        <addColumn tableName="permit">
            <column name="delegation_id" type="BIGINT"/>
        </addColumn>

        <dropColumn tableName="permit" columnName="delegation_start"/>
        <dropColumn tableName="permit" columnName="delegation_end"/>
    </changeSet>


    <changeSet id="1392842798347-3" author="arlias">
        <addForeignKeyConstraint baseTableName="delegation" baseColumnNames="user_id" constraintName="delegation_user_account_fk" referencedTableName="user_account"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="delegation" baseColumnNames="from_user_id" constraintName="delegation_from_user_account_fk" referencedTableName="user_account"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="permit" baseColumnNames="delegation_id" constraintName="permit_delegation_fk" referencedTableName="delegation"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="attachment" baseColumnNames="delegation_id" constraintName="attachment_delegation_fk" referencedTableName="delegation"
                                 referencedColumnNames="id"/>
    </changeSet>



</databaseChangeLog>