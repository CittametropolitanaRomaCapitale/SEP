<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-table-pec-operation" author="Simone Spinelli">
        <createTable tableName="PEC_OPERATION">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="id_protocollo" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_pec_operation_id_protocollo" references="PROTOCOLLI(id)"/>
            </column>
            <column name="id_email" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_pec_operation_id_email" references="EMAIL(id)"/>
            </column>
            <column name="cdr_code" type="VARCHAR(50)"/>
            <column name="id_utente" type="VARCHAR(100)"/>
            <column name="nome_utente" type="VARCHAR(50)"/>
            <column name="last_operation" type="VARCHAR(50)"/>
            <column name="ts_creation" type="TIMESTAMP"/>
            <column name="ts_update" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>