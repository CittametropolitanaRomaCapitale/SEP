<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="add_idTitolario_table_allegati" author="Lorenzo Petraroli">
        <addColumn tableName="allegati">
            <column name="id_titolario" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint baseTableName="allegati"
                                 baseColumnNames="id_titolario"
                                 constraintName="fk_id_titolario"
                                 referencedTableName="TITOLARIO"
                                 referencedColumnNames="ID"/>
    </changeSet>

</databaseChangeLog>
