<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet author="Simone" id="add_columns_and_constraint_protocollo_12-50-05292024">
        <addNotNullConstraint columnDataType="BIGINT"
                              columnName="id_protocollo"
                              tableName="email"/>

        <addForeignKeyConstraint  baseColumnNames="id_protocollo"
                                  baseTableName="email"
                                  constraintName="fk_id_protocollo_email"
                                  referencedColumnNames="id"
                                  referencedTableName="protocolli"/>

        <addColumn tableName="email">
            <column name="ts_ricezione" type="timestamp"/>
        </addColumn>

        <addColumn tableName="email">
            <column name="classificazione" type="varchar(255)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
