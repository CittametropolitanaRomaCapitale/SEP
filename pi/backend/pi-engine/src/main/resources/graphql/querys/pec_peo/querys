-- Ricerca delle configurazione pec / peo con paginazione e ricerca generale
query getPecPeoConfigurations($RicercaConfigPEDTOInput: RicercaConfigPEDTOInput) {
  getConfigurations(ricerca: $RicercaConfigPEDTOInput) {
    pageCount
    configurazioniPE {
      id
      cdr
      username
      indirizzoEmail
      password
      utente {
        id
        nome
        cognome
      }
      configurazione {
        id
        tipologiaPosta
        env
      }
    }
  }
}

